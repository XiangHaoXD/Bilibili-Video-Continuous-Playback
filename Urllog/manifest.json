{
  "manifest_version": 3,
  "name": "URL Logger",
  "version": "1.0.9",
  "description": "Record URLs with media playback detection and auto tab switching",
  "permissions": [
    "tabs",
    "downloads",
    "storage",
    "offscreen",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}